{% extends 'base.html.twig' %}

{% block body %}
<section class="blog_categorie_area">
	<div class="container">
		<div class="row">
			{% for a in activites %}
				<div class="col-sm-6 col-lg-4 mb-4 mb-lg-0">
					<br>
					<a href="{{path('getidFront',{'id':a.id})}}">
						<div class="categories_post">
							<img class="card-img rounded-0" height="237" src="{{asset('img/activite/'~a.Image)}}" alt="post">
							<div class="categories_details">
								<div
									class="categories_text">
									<!--<a href="{{path('getidFront',{'id':a.id})}}">-->
									<h5>
										{{ a.nomAcitivite }}
									</h5>
									<!--</a>-->
									<div class="border_line"></div>
									<p>
										{{ a.nbrePlace }}
										Places disponnibles</p>
								</div>
							</div>
						</div>
					</a>
				</div>
			{% endfor %}
		</div>
	</div>
</section>
{%endblock%}
